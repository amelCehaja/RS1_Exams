@model RS1_Ispit_asp.net_core.ViewModels.UrediMaturskiVM

<form action="/OdrzanaNastava/SpremiUredi" method="post">
    <input asp-for="ID" id="id" hidden />
    <div class="form-group">
        <label>Datum</label>
        <span>@Model.Datum</span>
    </div>
    <div class="form-group">
        <label>Predmet</label>
        <span>@Model.Predmet</span>
    </div>
    <div class="form-group">
        <label>Napomena</label>
        <textarea asp-for="Napomena" class="form-control"></textarea>
    </div>
    <button class="btn btn-success">Spremi</button>
</form>
<div id="ajaxDiv"></div>
<script src="~/js/UrediMaturskiAjax.js"></script>