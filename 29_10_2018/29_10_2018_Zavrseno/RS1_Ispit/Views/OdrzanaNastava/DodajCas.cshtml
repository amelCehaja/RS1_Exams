@model RS1_Ispit_asp.net_core.ViewModels.DodajCasVM
<form action="/OdrzanaNastava/SpremiCas" method="post">
    <input asp-for="NastavnikID" hidden />
    <div class="form-group">
        <p>Nastavnik: <label>@Model.Nastavnik</label></p>
    </div>
    <div class="form-group">
        <label>Datum</label>
        <input asp-for="Datum" class="form-control" />
    </div>
    <div class="form-group">
        <label>Odjeljenje/Predmet</label>
        <select asp-for="OdjeljenjePredmetID" asp-items="Model.OdjeljenjePredmet" class="form-control"></select>
    </div>
    <button class="btn btn-success">Spremi</button>
</form>