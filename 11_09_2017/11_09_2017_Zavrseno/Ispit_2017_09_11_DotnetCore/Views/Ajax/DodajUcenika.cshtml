@using Ispit_2017_09_11_DotnetCore.ViewModels
@model DodajUcenikaVM

<form id="forma">
    <input asp-for="ID" hidden />
    <input asp-for="OdjeljenjeID" hidden id="odjeljenjeId" />
    <div class="form-group">
        <label>Ucenik: </label>
        @if (Model.ID.HasValue)
        {
            <input asp-for="UcenikImePrezime" class="form-control" readonly />
        }
        else
        {
            <select asp-for="UcenikID" asp-items="Model.Ucenici" class="form-control"></select>
        }
    </div>
    <div class="form-group">
        <label>Broj u dnevniku: </label>
        <input asp-for="BrojUDnevniku" class="form-control" />
    </div>
    <button class="btn btn-success" id="spremi">Spremi</button>
</form>
<script src="~/js/DodajUcenikaAjax.js"></script>