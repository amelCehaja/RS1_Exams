@model RS1_Ispit_asp.net_core.ViewModels.PrikazUcenikaVM
<table class="table" border="1">
    <thead>
        <tr>
            <th>Ucenik</th>
            <th>Ocjena</th>
            <th>Prisutan</th>
            <th>Opravdano odsutan</th>
            <th>Akcija</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.Ucenici)
        {
            <tr>
                <td>@x.ImePrezime</td>
                <td>@x.Ocjena</td>
                <td>
                    @if (x.Prisutan == "Prisutan")
                    {
                        <a href="/ajax/UcenikJeOdsutan?id=@x.ID" ajax-poziv="da" ajax-rezultat="ajaxDiv" style="background-color:green; color:white; font-weight:bold;">@x.Prisutan</a>
                    }
                    else
                    {
                        <a href="/ajax/UcenikJePrisutan?id=@x.ID" ajax-poziv="da" ajax-rezultat="ajaxDiv" style="background-color:red; color:white; font-weight:bold;">@x.Prisutan</a>
                    }
                </td>
                <td>@x.Opravdano</td>
                <td><a href="/ajax/urediUcenik?id=@x.ID" ajax-poziv="da" ajax-rezultat="ajaxDiv">Uredi</a></td>
        </tr>
    }
    </tbody>
</table>